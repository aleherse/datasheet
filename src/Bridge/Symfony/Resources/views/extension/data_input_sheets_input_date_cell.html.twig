{% spaceless %}
    {% if readOnly %}
        {{ content }}
    {% else %}
        <input class="data-input-sheet-input" name="{{ constant('Arkschools\\DataInputSheets\\View::FORM_NAME') }}[{{ spineId }}][{{ columnId }}]" type="text" data-default="{{ content }}" value="{{ content }}" size="60">
        ({{ format }})
    {% endif %}
{% endspaceless %}
